<Window
    x:Class="QuickImport.Views.QuickImportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:QuickImport.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickImport.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:QuickImport.ViewModels"
    Title="Импорт и отображение объектов"
    Width="1000"
    Height="800"
    mc:Ignorable="d">

    <!--  Ресурсы окна: конвертеры  -->
    <Window.Resources>
        <converters:MeterToPixelConverter x:Key="MeterToPixelConverter" />
        <converters:HourToPixelConverter x:Key="HourToPixelConverter" />
    </Window.Resources>

    <!--  Установка DataContext через ресурс  -->

    <Window.DataContext>
        <vm:QuickImportViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Верхняя панель с кнопкой импорта  -->
        <StackPanel
            Grid.Row="0"
            Margin="5,5,0,5"
            Orientation="Horizontal">
            <Button
                Padding="5"
                Command="{Binding ImportFileCommand}"
                Content="Импортировать файл" />
        </StackPanel>

        <!--  Основной контент  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Таблица (DataGrid) для отображения и редактирования данных  -->
            <DataGrid
                Grid.Row="0"
                Grid.Column="0"
                Height="300"
                Margin="15,0,5,5"
                Padding="5"
                AutoGenerateColumns="False"
                CanUserAddRows="True"
                ItemsSource="{Binding Objects}"
                SelectedItem="{Binding SelectedObject, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name, Mode=TwoWay}" Header="Название" />
                    <DataGridTextColumn Binding="{Binding Distance, Mode=TwoWay}" Header="Гор. координата" />
                    <DataGridTextColumn Binding="{Binding Angle, Mode=TwoWay}" Header="Вер. координата" />
                    <DataGridTextColumn Binding="{Binding Width, Mode=TwoWay}" Header="Гор. размер" />
                    <DataGridTextColumn Binding="{Binding Height, Mode=TwoWay}" Header="Вер. размер" />
                    <DataGridCheckBoxColumn Binding="{Binding IsDefect, Mode=TwoWay}" Header="Дефект" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  Область отображения деталей выбранной строки  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="15,0,5,0"
                DataContext="{Binding SelectedObject}">
                <TextBlock
                    Margin="10,0,0,5"
                    FontWeight="Bold"
                    Text="Детали выбранного объекта:" />
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="{Binding Distance, StringFormat='Гор. координата: {0}'}" />
                <TextBlock Text="{Binding Angle, StringFormat='Вер. координата: {0}'}" />
                <TextBlock Text="{Binding Width, StringFormat='Гор. размер: {0}'}" />
                <TextBlock Text="{Binding Height, StringFormat='Вер. размер: {0}'}" />
                <TextBlock Text="{Binding IsDefect, StringFormat='Дефект: {0} '}" />
            </StackPanel>

            <!--  Графическое отображение (Canvas)  -->
            <ScrollViewer
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="10,0,0,10">
                <!--  Canvas размером 400x240 пикселей (20 м x 12 ч)  -->
                <Canvas Background="LightGray">
                    <!--  Используем ItemsControl для отрисовки прямоугольников  -->
                    <ItemsControl ItemsSource="{Binding Objects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!--  Прямоугольник с рамкой; координаты и размеры преобразуются в пиксели  -->
                                <Border
                                    Canvas.Left="{Binding Distance, Converter={StaticResource MeterToPixelConverter}}"
                                    Canvas.Top="{Binding Angle, Converter={StaticResource HourToPixelConverter}}"
                                    Width="{Binding Width, Converter={StaticResource MeterToPixelConverter}}"
                                    Height="{Binding Height, Converter={StaticResource HourToPixelConverter}}"
                                    Background="Transparent"
                                    BorderBrush="Red"
                                    BorderThickness="2" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
